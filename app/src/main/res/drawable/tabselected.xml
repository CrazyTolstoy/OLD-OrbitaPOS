<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>

    <!-- Shadow on Top -->
    <item android:top="1dp">
        <shape>
            <gradient
                android:startColor="#F6F6F6"
            android:endColor="#fff"
                android:angle="90"/>  <!-- Angle determines the direction of the shadow (90 for top) -->
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>


    <!-- Inner Shadow -->
    <item android:right="1dp" android:left="1dp" android:top="1dp">
        <shape>
            <gradient
                android:startColor="#F1EEEE"
                android:endColor="#fff"
                android:angle="270"/>  <!-- Angle determines the direction of the shadow (270 for bottom) -->
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape>
    </item>
</layer-list>
